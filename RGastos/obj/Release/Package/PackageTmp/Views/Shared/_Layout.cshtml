<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>Sistema Rendición de Gastos - Metso Minerals</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <a class="logo-metso" href="@Url.Action("Index", "Home")">
                    <img class="logo-metso" src="~/Images/metso-logo.png" alt="Metso Minerals" /></a>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <div id='cssmenu'>
                        <ul>
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            
                            <li class='has-sub'><a href='#'><span>Agregar</span></a>
                                <ul>
                                    <li>@Html.ActionLink("País", "Create", "Pais")</li>
                                    <li>@Html.ActionLink("Rendición de Gastos", "Create", "Rendicion")</li>                                    
                                </ul>
                            </li>

                            <li class='has-sub'><a href='#'><span>Listados</span></a>
                                <ul>
                                    <li>@Html.ActionLink("País", "Index", "Pais")</li>
                                    <li>@Html.ActionLink("Rendición de Gastos", "Index", "Rendicion")</li>                                    
                                </ul>
                            </li>

                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="grid-33">
                <hgroup class="headers-footer">
                    <h3 class="logo-footer">Metso Minerals</h3>
                    <h4>Sistema Rendición de Gastos - Metso Minerals</h4>
                    <h5 class="chile">Chile | <strong>&copy; Versión 2013.08.22</strong></h5>
                </hgroup>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
